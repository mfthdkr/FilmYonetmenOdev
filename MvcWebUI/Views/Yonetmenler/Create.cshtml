@model YonetmenModel

@{
    ViewData["Title"] = "Yönetmen Ekle";
}

<h1>@ViewData["Title"]</h1>

<h4>Yonetmen</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Adi" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Adi" class="form-control" />
					<span asp-validation-for="Adi" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Soyadi" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Soyadi" class="form-control" />
					<span asp-validation-for="Soyadi" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Odul" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Odul" class="form-control" />
					<span asp-validation-for="Odul" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="DogumTarihi" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="DogumTarihi" class="form-control" id="tarih" />
					<span asp-validation-for="DogumTarihi" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Kaydet" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Sıfırla</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Listeye dön.</a>
				</div>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
	<partial name="_ValidationScriptsPartial" />

	<link href="/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <script src="/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="/plugins/bootstrap-datepicker/locales/bootstrap-datepicker.tr.min.js"></script>

	<script>
		$(function(){
			$('#tarih').datepicker({
				todayBtn: "linked",
				clearBtn: true,
				language: "tr",
				orientation: "top auto",
				autoclose: true,
				todayHighlight: true
			});
		});
	</script>
}
